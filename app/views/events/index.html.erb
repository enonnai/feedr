<h3>Check out feedr's Latest Events:</h3> <br>
<%= link_to 'Add your Event', new_event_path, class: "btn col-md-12 btn-primary" %>
<br>
<br>
<br>

  <% @events.reverse.each do |event| %>
  <div class="container thumbnail col-md-6">
    <img src="<%= event.event_picture %>" class="img-responsive", height="375">
    <div class="caption" style="text-align: center;">
      <h3><%= event.title %></h3>
      <br>
      <% if current_user %>
        <% if current_user.profile %>
        <% response = HTTParty.get("https://maps.googleapis.com/maps/api/distancematrix/json?units=imperial&origins=#{current_user.profile.location}&destinations=#{event.address}&key=AIzaSyDnpY7hqQMSItvfLul9dC251c8ednf5hos") %>
        <% json = JSON.parse(response.body) %>
        <% dist = json['rows'][0]['elements'][0]['distance']['text'] %>
        <strong>Distance:</strong> <%=dist%>les
        <% else %>
        Create a Profile to see how far you are from this event!
        <% end %>
      <% else %>
      Sign up to see how far you are from this event!
      <% end %>
      <br>
      <strong>Starts</strong> on <%= DateTime.parse(event.date_time).strftime("%d/%m/%Y at %R") %>
      <br>
      <br>
      <%= link_to "View Event", event_path(event), class: "btn col-md-12 btn-primary" %>
      <br><br>
    </div>

  </div>
  <% end %>
